  <div class="grid-container">
    <div class="item1"><h3 id="index_head_font">Current Staff Members:</h3></div>
    <div class="item3"><a  href="/staffs/new"><h4 class="button "> Add new Staff+</h4></a></div>
  </div>

  <table class="table">
    <tr class="table_row">
      <th class="table_data_header">Staff Number</th>
      <th class="table_data_header">First Name</th>
      <th class="table_data_header">Last Name</th>
      <th class="table_data_header table_data_extra_header">Details</th>
    </tr>

  <% @staff.each do |individual| %>
    <tr class="table_row">
      <td class="table_data"><%= individual.id%></td>
      <td class="table_data"><%= individual.first_name.capitalize%></td>
      <td class="table_data"><%= individual.last_name.capitalize%></td>
      <td class=" table_data table_data_extra"><a href="/staffs/<%= individual.id %>">Show Details</a></td>
    </tr>
  <%end%>
  </table>
